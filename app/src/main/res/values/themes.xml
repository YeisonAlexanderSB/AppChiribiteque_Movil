<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChiribiqueteApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Title" >
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/Title</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/caveat_bold</item>
    </style>
    <style name="textspecial" >
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/subtitle1</item>
        <item name="android:fontFamily">@font/dhurjati</item>
    </style>
    <style name="subtitle" >
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/Title</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/oswald_bold</item>
    </style>
    <style name="Title2" >
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/caveat_bold</item>
    </style>
    <style name="normaltext" >
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
    </style>
</resources>