<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <PreferenceCategory app:title="@string/name_category_preferences"/>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="check_box_notification"
        android:title="@string/name_notification_preference_checkbox"
        android:icon="@drawable/ic_notifications" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="check_box_notification_sound"
        android:title="@string/name_notificationsound_preferences_checkbox"
        app:dependency="check_box_notification"
        android:icon="@drawable/ic_notifications_sound_active"/>

</PreferenceScreen>